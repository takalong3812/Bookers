
<h1>Books</h1>

<table> 
　<thead> 
　　<tr> 
　　　<th>title</th> 
　　　<th>body</th> 
　　　<th></th> 
　　</tr> 
　</thead> 
　<tbody> <% @books.each do |book| %> 
　　<tr> 
　　　<td> <%= book.title %> </td> 
　　　<td> <%= book.body %> </td> 
　　　<td> <%= link_to "show", book_path(book.id) %> </td> 
　　</tr> 
　 <% end %> 
　</tbody> 
</table>



<h2>New book</h2>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%=f.text_field :title%>
  
  <h4>Body</h4>
  <%= f.text_area :body%>
  
  <%= f.submit 'Create book'%>
  
 <% end %>
